<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_question"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.sardinha.iohan.enem_quiz.QuestionActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:text="PERGUNTA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/pergunta"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textAlignment="center" />

            <Button
                android:text="A"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/opcaoA" />

            <Button
                android:text="B"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/opcaoB" />

            <Button
                android:text="C"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/opcaoC" />

            <Button
                android:text="D"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/opcaoD" />

            <Button
                android:text="E"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/opcaoE" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
